<div class="d-flex justify-content-center align-items-center">
    <%= form_with model: [feed, feed.feed_comments.build], url: user_feed_feed_comments_path(feed_id: feed.id, user_id: current_user.id) do |f| %>
        <%= f.text_area :comment, placeholder: "add a comment", class: "form-control" %>
        <%= f.hidden_field :user_id, value: current_user.id %>
        <%= f.submit "Comment", disable_with: 'Commenting...' %>
    <%end%>
</div>
