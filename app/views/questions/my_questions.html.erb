<ul class="list-group list-group-numbered">
<% @questions.each do |question| %>
    <li class="list-group-item d-flex justify-content-between align-items-start">
    <div class="ms-2 me-auto">
      <div class="fw-bold"><%= link_to question.question, question_path(question.id) %></div>
    </div>
    <span class="badge bg-primary rounded-pill"><%= question.answers.count %>&nbsp;answers</span>
  </li>
<%end%>
</ul>